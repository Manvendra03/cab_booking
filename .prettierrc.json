{
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "dounleQuote": true,
    "jsxSingleQuote": false,
    "printWidth": 80,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "auto",
    "overrides": [
        {
            "files": "*.json",
            "options": {
                "tabWidth": 4
            }
        },
        {
          "files": "*.js",
          "options": {
              "overrides": [
                  {
                      "files": "*.js",
                      "options": {
                          "proseWrap": "preserve",
                          "operators": ["||"]
                      }
                  }
              ]
          }
      }
    ]

}
